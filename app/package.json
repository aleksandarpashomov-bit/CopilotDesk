{
  "name": "copilotdesk",
  "version": "1.0.0",
  "description": "CopilotDeskAI Desktop Assistant",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.copilotdesk.ai",
    "productName": "CopilotDeskAI",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "openai": "^4.50.0",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  }
}
