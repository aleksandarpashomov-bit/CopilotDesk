{
  "name": "copilotdesk",
  "version": "1.0.0",
  "description": "CopilotDeskAI Desktop Assistant with Screen Control",
  "main": "main.js",

  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder"
  },

  "build": {
    "appId": "com.copilotdesk.ai",
    "productName": "CopilotDeskAI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "backend/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },

  "dependencies": {
    "electron-store": "^8.1.0",
    "screenshot-desktop": "^1.15.0",
    "robotjs": "0.6.0"
  },

  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  }
}
